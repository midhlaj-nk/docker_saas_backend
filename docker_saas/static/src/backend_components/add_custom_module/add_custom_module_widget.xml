<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="docker_saas.AddCustomModuleWidget" owl="1">
        <t t-if="!canInteract">
            <div class="alert alert-info mb-0">
                <i class="fa fa-info-circle me-2"/>
                <strong>Setup Required:</strong>
                <t t-if="!props.record.data.instance_path || !props.record.data.name">
                    Please save the instance first to enable custom module uploads.
                </t>
            </div>
        </t>
        <t t-else="">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h6 class="mb-0 text-primary">
                        <i class="fa fa-puzzle-piece me-2"/>Custom Modules Manager
                    </h6>
                    <a class="btn btn-sm btn-outline-success" t-on-click="handleHelpSwal" href="#">
                        <i class="fa fa-question-circle me-1"/>How to Upload?
                    </a>
                </div>

                <div class="card-body">
                    <!-- Upload Progress -->
                    <div class="mb-3" t-if="state.isUploading">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-primary fw-bold">
                                <i class="fa fa-spinner fa-spin me-2"/>Uploading...
                            </span>
                            <span class="badge bg-primary" t-esc="state.uploadProgress + '%'"/>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                                 role="progressbar" 
                                 t-att-style="'width: ' + state.uploadProgress + '%'"
                                 t-att-aria-valuenow="state.uploadProgress"
                                 aria-valuemin="0" 
                                 aria-valuemax="100"/>
                        </div>
                    </div>

                    <!-- File Upload Input -->
                    <div class="mb-3">
                        <input
                            type="file"
                            class="form-control"
                            t-att-disabled="isReadonly || state.isUploading ? true : undefined"
                            t-ref="file"
                        />
                        <div class="form-text">
                            <i class="fa fa-info-circle me-1"/>Accepted format: ZIP files only (max recommended: 50MB)
                        </div>
                    </div>

                    <!-- Error Alert -->
                    <div class="alert alert-danger d-flex align-items-center" role="alert" t-if="state.error">
                        <i class="fa fa-exclamation-triangle me-2"/>
                        <div>
                            <strong>Error:</strong>
                            <t t-esc="state.error"/>
                        </div>
                    </div>

                    <!-- Modules List Header -->
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0 text-secondary">
                            <i class="fa fa-list me-2"/>Uploaded Modules 
                            <span class="badge bg-secondary ms-2" t-esc="state.fileList.length"/>
                        </h6>
                        <span class="text-muted small" t-if="state.loading">
                            <i class="fa fa-sync fa-spin me-1"/>Refreshing...
                        </span>
                    </div>

                    <!-- Modules List -->
                    <ul class="list-group">
                        <li class="list-group-item text-center text-muted py-4" t-if="!state.loading and !state.fileList.length">
                            <i class="fa fa-folder-open fa-3x mb-3 opacity-25"/>
                            <p class="mb-0">No custom modules uploaded yet.</p>
                            <small>Upload a ZIP file to get started. Extracted modules are stored directly in <code>addons/</code>.</small>
                        </li>
                        <t t-foreach="state.fileList" t-as="file" t-key="file">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-folder text-warning me-3 fa-lg"/>
                                    <span class="fw-medium" t-esc="file"/>
                                </div>
                                <button
                                    type="button"
                                    class="btn btn-danger btn-sm"
                                    t-on-click="(ev) => deleteFile(file)"
                                    t-att-disabled="isReadonly || state.loading || state.isUploading ? true : undefined"
                                >
                                    <i class="fa fa-trash me-1"/>Delete
                                </button>
                            </li>
                        </t>
                    </ul>
                </div>

                <div class="card-footer bg-light text-muted small">
                    <i class="fa fa-lightbulb me-1"/>
                    <strong>Tip:</strong> After uploading, remember to update your Apps list and install the new module.
                </div>
            </div>
        </t>
    </t>
</templates>

